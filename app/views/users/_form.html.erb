<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div class="alert alert-error">
      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    名前 <%= f.text_field :name %>
  </div>
  <div class="actions">
    <%= f.submit '更新', class: 'btn' %>
  </div>
<% end %>
